<?xml version="1.0" encoding="utf-8"?>
<!-- JH:  OAuth 2 won't need a web view
<WebView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/webview"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    />
-->
<LinearLayout android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/login_view"
	android:orientation="vertical">

	<EditText android:layout_height="wrap_content" 
		android:fitsSystemWindows="true" 
		android:id="@+id/user_box" android:layout_width="fill_parent" android:selectAllOnFocus="true" android:nextFocusUp="@+id/user_box" android:hint="Username">
	</EditText>
	
	<EditText android:layout_height="wrap_content" 
		android:id="@+id/pass_box" 
		android:password="true"
		android:selectAllOnFocus="true" 
		android:cursorVisible="true" 
		android:layout_width="fill_parent" 
		android:nextFocusDown="@+id/pass_box" android:singleLine="true" android:hint="Password">
	</EditText>

	<Button android:layout_height="wrap_content" 
		android:id="@+id/login_button" 
		android:text="Login" 
		android:layout_width="fill_parent">
	</Button>
</LinearLayout>
